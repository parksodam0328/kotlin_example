<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:focusable="true"
        android:focusableInTouchMode="true">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000"
                android:gravity="right"
                android:textSize="60sp"
                android:layout_margin="20dp"
                android:id="@+id/testView"/>
    </ScrollView>
    <View android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginBottom="30dp"></View>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center"
                  android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:onClick="onNumber"
                    android:id="@+id/seven"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:onClick="onNumber"
                    android:id="@+id/eight"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:onClick="onNumber"
                    android:id="@+id/nine"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="/"
                    android:onClick="onCalculator"
                    android:id="@+id/divide"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center"
                  android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:onClick="onNumber"
                    android:id="@+id/four"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:onClick="onNumber"
                    android:id="@+id/five"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:onClick="onNumber"
                    android:id="@+id/six"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="*"
                    android:onClick="onCalculator"
                    android:id="@+id/multiply"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center"
                  android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:onClick="onNumber"
                    android:id="@+id/one"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:onClick="onNumber"
                    android:id="@+id/two"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:onClick="onNumber"
                    android:id="@+id/three"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:onClick="onCalculator"
                    android:id="@+id/minus"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center|start" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:onClick="onNumber"
                    android:id="@+id/zero"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="C"
                    android:id="@+id/cancle"
                    android:onClick="onClear"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="="
                    android:id="@+id/equals"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:onClick="onCalculator"
                    android:id="@+id/plus"
            />
        </TableRow>
    </TableLayout>
</LinearLayout>